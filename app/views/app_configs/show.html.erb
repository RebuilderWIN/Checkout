<div class="page-header">
  <h1><%= t('app_config.title', default: 'Configuration') %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('somple_form.labels.app_config.default_checkout_length') %></strong></dt>
  <dd><%= @app_config.default_checkout_length %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              app_config_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_app_config_path, :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              app_config_path(@app_config),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
