<% title 'component_model.title' %>

<% content_for :sidebar do %>
  <li class="nav-header"><%= t(".actions") %></li>
  <%= sidebar_link(t("helpers.links.new"),
                   new_component_model_path,
                   t("component_model.sidebar.add.default_tooltip"),
                   can?(:manage, ComponentModel),
                   t("component_model.sidebar.add.denied_tooltip"),
                   :class=>'btn-new') %>
  <li class="nav-header"><%= t("component_model.sidebar.filters") %></li>
  <%= sidebar_link t("component_model.sidebar.all.text"),
                   component_models_path,
                   t("component_model.sidebar.all.default_tooltip") %>
  <%= sidebar_link t("component_model.sidebar.checkoutable.text"),
                   checkoutable_component_models_path,
                   t("component_model.sidebar.checkoutable.default_tooltip") %>
  <%#= sidebar_link t("component_model.sidebar.non_checkoutable.text"),
                   non_checkoutable_component_models_path,
                   t("component_model.sidebar.non_checkoutable.default_tooltip") %>
<% end %>

<%= paginate @component_models %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>Count</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @component_models.each do |cm| %>
      <tr>
        <td><%= link_to cm.brand.name, brand_path(cm.brand) %></td>
        <td><%= link_to cm.name, component_model_path(cm) %></td>
        <td><%= cm.description %></td>
        <td><%= cm.kits.count %></td>
        <td class="action-buttons">
          <%= link_to('Reserve', new_component_model_loan_path(:component_model_id => cm), :class => 'btn btn-mini') if cm.checkoutable? %>
        </td>
        <td class="action-buttons">
          <%= link_to('Edit', edit_component_model_path(cm), :class => 'btn btn-mini btn-edit-component-model') if can? :manage, ComponentModel %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @component_models %>
