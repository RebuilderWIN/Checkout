<h1>Brands</h1>

<%= paginate @brands %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.name, brand_models_path(brand) %></td>
        <td>
          <%= link_to 'Show Models',  brand_models_path(brand), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @brands %>
