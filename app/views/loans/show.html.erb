<% title t('loan.show.title', :id => @loan.model.id) %>
<% subtitle @loan.kit.component_list %>

<dl class="dl-horizontal">
  <dt>Client</dt>
  <dd><%= @loan.client %></dd>
  <dt>Check Out Location</dt>
  <dd><%= @loan.location %></dd>
  <dt>Kit</dt>
  <dd><%= @loan.kit %></dd>
  <dt>Check Out Day</dt>
  <dd><%= @loan.starts_at %></dd>
  <dt>Check In Day</dt>
  <dd><%= @loan.ends_at %></dd>
  <dt>Status</dt>
  <dd><%= @loan.state %></dd>

  <% if @loan.model.approver %>
    <dt>Approved By</dt>
    <dd><%= @loan.approver %></dd>
  <% end %>

  <% if @loan.model.out_at %>
    <dt>Checked Out At</dt>
    <dd><%= @loan.out_at %></dd>
    <dt>Checked Out By</dt>
    <dd><%= @loan.out_assistant %></dd>
  <% end %>

  <% if @loan.model.in_at %>
    <dt>Checked In At</dt>
    <dd><%= @loan.in_at %></dd>
    <dt>Checked In By</dt>
    <dd><%= @loan.in_assistant %></dd>
    <dt>Late</dt>
    <dd><%= @loan.late %></dd>
  <% end %>


</dl>

<div class="form-actions">
  <%= link_to 'Back', loans_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_loan_path(@loan), :class => 'btn' %>
  <%= link_to 'Delete', loan_path(@loan), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
