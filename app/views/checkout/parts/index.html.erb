<h1>Listing parts</h1>

<table>
  <tr>
    <th>Kit</th>
    <th>Model</th>
    <th>Serial number</th>
    <th>Cost</th>
    <th>Insured</th>
    <th>Missing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%= part.kit_id %></td>
    <td><%= part.model_id %></td>
    <td><%= part.serial_number %></td>
    <td><%= part.cost %></td>
    <td><%= part.insured %></td>
    <td><%= part.missing %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

