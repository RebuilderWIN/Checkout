<h1>Listing kits</h1>

<table>
  <tr>
    <th>Tombstoned</th>
    <th>Checkoutable</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @kits.each do |kit| %>
  <tr>
    <td><%= kit.tombstoned %></td>
    <td><%= kit.checkoutable %></td>
    <td><%= kit.location %></td>
    <td><%= link_to 'Show', kit %></td>
    <td><%= link_to 'Edit', edit_kit_path(kit) %></td>
    <td><%= link_to 'Destroy', kit, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

