<%= simple_nested_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Location</legend>
    <%= f.input :name %>

    <%= f.simple_fields_for :business_hours %>
    <p><%= f.link_to_add "Add Hours", :business_hours %></p>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', locations_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
