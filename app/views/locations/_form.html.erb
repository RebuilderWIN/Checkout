<div class="page-header">
  <h2><%= controller.action_name.capitalize %> Location</h2>
</div>

<%= simple_nested_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Info</legend>
    <%= f.input :name %>
  </fieldset>
  <fieldset>
    <legend>Hours</legend>
    <%= f.simple_fields_for :business_hours %>
    <%= f.link_to_add "Add Hours", :business_hours, :class => 'btn', :style => "margin:1em 1em 1em 4em;" %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', locations_path, :class => 'btn' %>
  </div>
<% end %>
