<%= simple_nested_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Info</legend>
    <%= f.input :name %>
  </fieldset>
  <fieldset>
    <legend>Hours</legend>
    <%= f.simple_fields_for :business_hours %>
    <%= f.link_to_add "<i class='icon-plus-sign'></i> Add more hours".html_safe, :business_hours %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', locations_path, :class => 'btn' %>
  </div>
<% end %>
