<h1><%= @location.name %></h1>

<p>
  <b>Business Hours</b><br>
  <%= raw(@location.hours_to_s.join("<br>")) %>
</p>

<div class="form-actions">
  <%= link_to 'Back', locations_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_location_path(@location), :class => 'btn' %>
  <%= link_to 'Delete', location_path(@location), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
