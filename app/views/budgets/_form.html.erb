<div class="page-header">
  <h1><%= controller.action_name.capitalize %> Budget</h1>
</div>

<%= simple_form_for @budget, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :number %>
  <%= f.input :name %>
  <%= f.input :date_start, :include_blank => true %>
  <%= f.input :date_end, :include_blank => true %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', budgets_path, :class => 'btn' %>
  </div>
<% end %>
