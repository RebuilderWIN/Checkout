<h1>Budgets</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Dates</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= link_to budget.number, budget_path(budget) %></td>
        <td><%= budget.name %></td>
        <td><%= budget.display_date %></td>
        <td>
          <%= link_to 'Edit', edit_budget_path(budget), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', budget_path(budget), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_budget_path, :class => 'btn btn-primary' %>
