<%= link_to(t('.new',
            :default => raw("<i class='icon-plus-sign'></i> #{ t('helpers.links.new') }")),
            new_budget_path,
            :class => 'btn btn-primary pull-right btn-new-budget') if can? :manage, Budget %>

<h1>Budgets</h1>

<%= paginate @budgets %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Dates</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= link_to budget.number, budget_path(budget) %></td>
        <td><%= budget.name %></td>
        <td><%= budget.display_date %></td>
        <td>
          <%= link_to 'Edit', edit_budget_path(budget), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @budgets %>
