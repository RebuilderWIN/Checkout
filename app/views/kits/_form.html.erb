<div class="page-header">
  <h1><%= controller.action_name.capitalize %> Kit</h1>
</div>

<%= simple_nested_form_for @kit, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :location, :prompt => 'Select location', :input_html => { :class  => 'location-select' } %>
  <div class="controls control-action">
    <!-- displays the location/new_modal partial -->
    <a data-toggle="modal" href="#location_modal">New Location</a>
  </div>
  <%= f.input :checkoutable, :hint => "'True' if you want the kit to be available in the reservation system." %>
  <%= f.association :budget, :collection => BudgetDecorator.decorate(Budget.active), :label_method => :to_s, :prompt => 'Select budget' %>  
  <div class="controls control-action">
    <!-- displays the budget/new_modal partial -->
    <a data-toggle="modal" href="#budget_modal">New Budget</a>
  </div>
  <%= f.input :insured %>
  <%= f.input :tombstoned, :hint => "'True' if this kit is missing/stolen/destroyed and never coming back."  %>
  <fieldset>
    <legend>Components</legend>
    <%= f.simple_fields_for :components %>
    <%= f.link_to_add "<i class='icon-plus-sign'></i> Add another component".html_safe, :components %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', kits_path, :class => 'btn' %>
  </div>
<% end %>

<%= render :partial => 'locations/new_modal' %>
<%= render :partial => 'budgets/new_modal' %>
