<div class="page-header">
  <h1>Kit <%= @kit.id.to_s %> <small><%= @kit.components_description %></small></h1>
</div>

<div class="pull-right">
  <img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl=<%= u(kit_url(@kit)) %>&choe=UTF-8" alt="QR code" class="qrcode">
</div>

<dl class="dl-horizontal">
  <dt>Location</dt>
  <dd><%= something(@kit.location) %></dd>
  <dt>Training Required</dt>
  <dd><%= something(@kit.training_required?) %></dd>
  <dt>Checkoutable</dt>
  <dd><%= something(@kit.checkoutable) %></dd>
  <dt>Tombstoned</dt>
  <dd><%= something(@kit.tombstoned) %></dd>
  <dt>Budget</dt>
  <dd><%= something(@kit.budget) %></dd>
  <dt>Cost</dt>
  <dd><%= something(@kit.cost) %></dd>
  <dt>Insured</dt>
  <dd><%= something(@kit.insured) %></dd>
</dl>

<h3>Components</h3>
<table class="table table-striped">
  <tbody>
    <tr>
      <th width="span3">Model</th>
      <th width="span3">Asset Tag</th>
      <th width="span3">Serial Number</th>
      <th width="span3">Missing</th>
    </tr>
<% @kit.components.each do |c| %>
    <tr>
      <td><%= c.model.branded_name %></td>
      <td><%= c.asset_tag %></td>
      <td><%= c.serial_number %></td>
      <td><%= c.missing %></td>
    </tr>
<% end %>
  </tbody>
</table>

<div><%= link_to 'Show Reservations', kit_reservations_path(@kit) if @kit.reservable? %></div>

<div class="form-actions">
  <%= link_to 'Back', kits_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_kit_path(@kit), :class => 'btn' %>
  <%= link_to 'Delete', kit_path(@kit), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <%= link_to 'Reserve', new_kit_reservation_path(@kit), :class => 'btn' if @kit.reservable? %>
</div>
