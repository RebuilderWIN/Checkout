<h1><%= @brand %> <%= @model %></h1>

<table class="table table-bordered table-striped">
  <tbody>
    <tr>
      <th>Brand</th>
      <td><%= link_to @brand, brand_path(@brand) %></td>
    </tr>
    <tr>
      <th>Model</th>
      <td><%= link_to @model, model_path(@model) %></td>
    </tr>
    <tr>
      <th>Asset Tags</th>
      <td>
        <%= @asset_tags.join("<br>") %>
      </td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= @kit.location %></td>
    </tr>
    <tr>
      <th>Checkoutable</th>
      <td><%= @kit.checkoutable %></td>
    </tr>
    <tr>
      <th>Tombstoned</th>
      <td><%= @kit.tombstoned %></td>
    </tr>
  </tbody>
</table>





<div class="form-actions">
  <%= link_to 'Back', kits_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_kit_path(@kit), :class => 'btn' %>
  <%= link_to 'Delete', kit_path(@kit), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
