<%= link_to raw(t("helpers.links.new")),
            new_business_hour_exception_path,
            :class => 'btn btn-primary pull-right' if can? :manage, BusinessHourException %>

<div class="page-header">
  <h1><%= t(business_hour_exception.title', :default=>'Business Hour Exceptions') %></h1>
</div>

<table class="table table-striped">
  <tr>
    <th>Location</th>
    <th>Date closed</th>
    <th class="skinny-column">Actions</th>
  </tr>

<% @business_hour_exceptions.each do |business_hour_exception| %>
  <tr>
    <td><%= business_hour_exception.location %></td>
    <td><%= business_hour_exception.date_closed %></td>
    <td><%= link_to 'Show', business_hour_exception %>
    <%= link_to 'Edit', edit_business_hour_exception_path(business_hour_exception) %>
    <%= link_to 'Destroy', business_hour_exception, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
