<div class="page-header">
  <h1>Group</h1>
</div>

<div class="row-fluid">
  <div class="span12">
    <dl class="dl-horizontal">
      <dt><%= t('group.name') %></dt>
      <dd><%= @group.name %></dd>
      <dt><%= t('group.expires_at') %></dt>
      <dd><%= @group.expires_at %></dd>
    </dl>
  </div>
</div>  

<h2>Users</h2>

<div class="row-fluid">
  <div class="span12">
    <% if @group.users.empty? %>
    <p>No users</p>
    <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="status">Status</th>
          <th>Username</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @group.users.each do |user| %>
          <tr>
            <td><%= user.status %></td>
            <td><%= link_to user.username, user_path(user) %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>

<h2>Kits</h2>

<div class="row-fluid">
  <div class="span12">
    <% if @group.kits.empty? %>
    <p>No kits</p>
    <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Asset Tag</th>
          <th>Components</th>
        </tr>
      </thead>
      <tbody>
        <% @group.kits.each do |kit| %>
        <tr>
          <td><%= link_to(kit.asset_tags, kit_path(kit)) %></td>
          <td><%= kit.linked_component_list %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              groups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_path(@group), :class => 'btn' if can? :manage, Group %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_path(@group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' if can? :manage, Group %>
</div>
