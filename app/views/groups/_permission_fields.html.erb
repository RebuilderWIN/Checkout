<div class="field">
  <%= f.input :kit_id,
              :label => false,
              :wrapper_html => {
                :class => 'table-form'
              },
              :input_html => {
                  :class => 'select2-json-autocomplete select-kit',
                  :hidden => true,
                  "data-ajax-url" => select2_kits_path(:format => :json),
                  "data-text" => f.object.try(:data_text)
              } %>
</div>
<div class="field">
  <%= f.input :expires_at,
              :as => :date_picker,
              :label => false,
              :wrapper_html => {
                :class => 'table-form'
              },
              :input_html => {
                  :class => "generic_datepicker",
                  :value => (f.object.new_record? || f.object.nil?) ? nil : f.object.expires_at
              } %>
</div>
<div class="field"><%= f.link_to_remove "Remove", :class => "btn btn-danger" %></div>
