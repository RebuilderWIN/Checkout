<%= simple_nested_form_for @group.model, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <h2>Members</h2>
  <div class="records row-fluid">
    <div class="fields field-headers row-fluid">
      <div class="field field-header span6">Username</div>
      <div class="field field-header span4">Expires At</div>
      <div class="field field-header span2">Actions</div>
    </div>
    <%= f.simple_fields_for :memberships, @memberships %>
    <%= f.link_to_add raw("<i class='icon-plus-sign'></i> Add another user"), :memberships %>
  </div>
  <h2>Kits</h2>
  <div class="records row-fluid">
    <div class="fields field-headers row-fluid">
      <div class="field field-header span1">Kit ID</div>
      <div class="field field-header span2">Asset Tags</div>
      <div class="field field-header span4">Components</div>
      <div class="field field-header span3">Expires At</div>
      <div class="field field-header span2">Actions</div>
    </div>
    <%= f.simple_fields_for :permissions %>
    <%= f.link_to_add raw("<i class='icon-plus-sign'></i> Add another kit"), :permissions %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                groups_path, :class => 'btn' %>
  </div>
<% end %>
