<%= simple_nested_form_for @group, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <h2>Members</h2>
  <div class="records">
    <div class="fields field-headers">
      <div class="field field-header">Username</div>
      <div class="field field-header">Expires At</div>
      <div class="field field-header">Actions</div>
    </div>
    <%= f.simple_fields_for :memberships, @memberships %>
    <%= f.link_to_add raw("<i class='icon-plus-sign'></i> Add another user"), :memberships, :id=>"memberships-add-user" %>
  </div>
  <h2>Kits</h2>
  <div class="records">
    <div class="fields field-headers">
      <div class="field field-header">Asset Tags</div>
      <div class="field field-header">Expires At</div>
      <div class="field field-header">Actions</div>
    </div>
    <%= f.simple_fields_for :permissions %>
    <%= f.link_to_add raw("<i class='icon-plus-sign'></i> Add another kit"), :permissions, :id=>"permissions-add-kit" %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                groups_path, :class => 'btn' %>
  </div>
<% end %>
