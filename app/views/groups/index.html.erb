<%= link_to(t('.new',
            :default => raw("<i class='icon-plus-sign'></i> #{ t('helpers.links.new') }")),
            new_group_path,
            :class => 'btn btn-primary pull-right btn-new-group') if can? :manage, Group %>

<h1>Groups</h1>

<%= paginate @groups %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Expires At</th>
      <th>User Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group_path(group) %></td>
        <td><%= group.expires_at %></td>
        <td><%= group.users.count %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_group_path(group), :class => 'btn btn-mini' if can? :manage, Group %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      group_path(group),
                      :method => :delete,
                      :data => {
                        :confirm => t('.confirm',
                        :default => t("helpers.links.confirm", :default => 'Are you sure?'))
                      },
                      :class => 'btn btn-mini btn-danger'  if can? :manage, Group%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups %>
