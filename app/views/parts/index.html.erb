<h1>Parts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Serial number</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.id %></td>
        <td><%= link_to part.serial_number, part_path(part) %></td>
        <td><%= part.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_part_path(part), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', part_path(part), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_part_path, :class => 'btn btn-primary' %>
