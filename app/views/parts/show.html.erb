<h1>Part</h1>

<p>
  <b>Brand</b><br>
  <%= @part.model.brand %>
</p>

<p>
  <b>Model</b><br>
  <%= @part.model %>
</p>

<p>
  <b>Serial number</b><br>
  <%= @part.serial_number %>
</p>

<p>
  <b>Cost</b><br>
  <%= @part.cost %>
</p>

<p>
  <b>Insured</b><br>
  <%= @part.insured %>
</p>

<p>
  <b>Missing</b><br>
  <%= @part.missing %>
</p>

<p>
  <b>Budget</b><br>
  <%= @part.budget %>
</p>

<p>
  <b>Kit</b><br>
  <%= @part.kit_id %>
</p>

<div class="form-actions">
  <%= link_to 'Back', parts_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_part_path(@part), :class => 'btn' %>
  <%= link_to 'Delete', part_path(@part), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
