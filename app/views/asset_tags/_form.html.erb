<%= form_for @asset_tag, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Asset Tag</legend>

    <div class="control-group">
      <%= f.label :uid, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :uid, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :part_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :part_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', asset_tags_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
