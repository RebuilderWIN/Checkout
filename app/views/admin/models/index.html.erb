<h1>Models</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= link_to model.brand.name, admin_brand_models_path(model.brand) %></td>
        <td><%= link_to model.name, admin_model_parts_path(model) %></td>
        <td><%= model.description %></td>
        <td><%= model.parts.count %></td>
        <td>
          <%= link_to 'Parts', admin_model_parts_path(model), :class => 'btn btn-mini' %>
          <%= link_to 'Edit', edit_admin_model_path(model), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', admin_model_path(model), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_admin_model_path, :class => 'btn btn-primary' %>
