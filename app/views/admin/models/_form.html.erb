<%= form_for @model, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Model</legend>

    <div class="control-group">
      <%= f.label :maker_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :maker_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :training_required, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :training_required, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', models_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
