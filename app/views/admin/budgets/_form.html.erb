<%= form_for @budget, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Budget</legend>

    <div class="control-group">
      <%= f.label :number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :number, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :date_start, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date_start, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :date_end, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date_end, :class => 'date_select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', budgets_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
