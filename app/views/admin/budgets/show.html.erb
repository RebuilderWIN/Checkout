<h1>Budget</h1>

<p>
  <b>Number</b><br>
  <%= @budget.number %>
</p>

<p>
  <b>Name</b><br>
  <%= @budget.name %>
</p>

<p>
  <b>Date start</b><br>
  <%= @budget.date_start %>
</p>

<p>
  <b>Date end</b><br>
  <%= @budget.date_end %>
</p>

<div class="form-actions">
  <%= link_to 'Back', budgets_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_budget_path(@budget), :class => 'btn' %>
  <%= link_to 'Delete', budget_path(@budget), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
