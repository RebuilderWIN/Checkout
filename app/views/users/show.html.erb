<div class="page-header">
  <h1>User</h1>
</div>

<div class="row-fluid">
  <div class="span12">
    <dl class="dl-horizontal">
      <dt><%= t('user.first_name') %></dt>
      <dd><%= @user.first_name %></dd>
      <dt><%= t('user.last_name') %></dt>
      <dd><%= @user.last_name %></dd>
      <dt><%= t('user.username') %></dt>
      <dd><%= @user.username %></dd>
      <dt><%= t('user.email') %></dt>
      <dd><%= @user.email %></dd>
      <% Covenant.all.each do |c| %>
        <dt title="<%= c.name %>"><%= c.name %></dt>
        <dd><%= @user.to_yes_no(@user.covenants.include? c) %></dd>
      <% end %>
      <dt title="<%= t('user.suspension_count') %>"><%= t('user.suspension_count') %></dt>
      <dd><%= @user.suspension_count %></dd>
      <dt><%= t('user.suspended_until') %></dt>
      <dd><%= @user.suspended_until %></dd>
      <dt><%= t('user.disabled') %></dt>
      <dd><%= @user.disabled %></dd>
      <dt><%= t('user.roles') %></dt>
      <dd><%= @user.roles_list("<br>") %></dd>
      <dt><%= t('user.groups') %></dt>
      <dd><%= @user.groups_list("<br>") %></dd>
    </dl>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              active_users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
</div>
