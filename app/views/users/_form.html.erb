<%= simple_nested_form_for @user.model, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.association :covenants, :as => :check_boxes %>
  <%= f.input :suspended_until, :as => :date_picker %>
  <%= f.input :disabled, :as => :radio_buttons %>

  <%= f.association :roles, :as => :check_boxes %>

  <h2>Groups</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Expires</th>
        <th>Supervisor</th>
        <th class="skinny-column">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :memberships, @user.model.memberships, wrapper: false %>
      <tr>
        <td colspan="4"><%= f.link_to_add raw("<i class='icon-plus-sign'></i> Add another group"), :memberships %></td>
      </tr>
    <tbody>
  </table>

  <h2>Training</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Model</th>
        <th class="skinny-column">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :trainings, @user.model.trainings, wrapper: false %>
      <tr>
        <td colspan="2">
          <%= f.link_to_add raw("<i class='icon-plus-sign'></i> Add another model"), :trainings %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                active_users_path, :class => 'btn' %>
  </div>
<% end %>
