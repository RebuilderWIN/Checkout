<%= link_to t('.new',
            :default => raw("<i class='icon-plus-sign'></i> #{ t('helpers.links.new') }")),
            new_user_path,
            :class => 'btn btn-primary pull-right' %>

<div class="page-header">
  <h1><%=t '.title', :default => "Users" %></h1>
</div>

<%= paginate @users %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable('username', t('user.username')) %></th>
      <th><%= sortable('email', t('user.email')) %></th>
      <th><%= sortable('suspension_count', t('user.suspension_count')) %></th>
      <th><%= sortable('suspended_until', t('user.suspended_until')) %></th>
      <th><%= sortable('disabled', t('user.disabled')) %></th>
      <th><%= t '.roles', :default => t("helpers.roles") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.suspension_count %></td>
        <td><%= user.suspended_until %></td>
        <td><%= user.disabled %></td>
        <td><%= user.roles %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>


