<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Reservation</legend>

    <p><strong><%= @notice.html_safe %></strong></p>
    
    <%= f.association :client, :as => :hidden %>
    <%= f.association :client, :disabled => true %>
    <%= f.association :kit, :as => :hidden %>
    <%= f.association :kit, :disabled => true %>
    <%= f.input :start_at, :as => :string, :input_html => { :class => 'datepicker' } %>
    <%= f.input :end_at,   :as => :string, :input_html => { :class => 'datepicker' } %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', reservations_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
